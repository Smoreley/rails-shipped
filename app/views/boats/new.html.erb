<%= form_for Boat.new do |f| %>
    <h2>New Boat</h2>

    <div class='form-group row'>
        <div class="col-sm-12">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
    </div>

    <div class='form-group row'>
        <div class="col-sm-12">
        <%= f.label :location %>
        <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
        </div>
    </div>

    <div class='form-group row'>
        <div class="col-sm-12">
        <%= f.label :Container_Carry_Count %>
        <%= f.number_field :ccc, class: "form-control", placeholder: "Count" %>
        </div>
    </div>

    <div class="form-group row">
       <div class="col-sm-12">
           <%= f.submit "Create new boat", class: "btn btn-lg btn-primary btn-block" %>
        </div>
    </div>
<% end %>