<%= @message %>
<%= title "Place" %>

<%= form_tag place_path, :method => :get do %>
  <p>
    <%= text.field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", name => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Address</th>
    <%= text.field_tag :address, params[:address] %>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>
<%= for place in @places %>
  <tr>
    <td><%= place.address %></td>
    <td><%= place.latitude %></td>
    <td><%= place.longitude %></td>
    <td><%= link_to "Show". place %></td>
    <td><%= link_to "Edit". edit_place_path(place) %></td>
    <td><%= link_to "Destory". place, :confirm => 'Are you sure?', :delete %></td>
  </tr>
<% end %> 
</table>
